#include<stdio.h>
int main()
{
  int choice, array[100], arrayrand[100], userchoice;
  printf("Input 1 for manual or 0 for random\n");
  while (scanf("%d", &userchoice) != 1 || userchoice > 1 || userchoice < 0 || getchar() != '\n')
  {
    printf("Error, try again\n");
    rewind(stdin);
  }
  printf("Imput the number of the elements ");
  while (scanf("%d", &choice) != 1 && choice > 100 || getchar() != '\n')
  {
    for (int i = 0; i < choice; i++)
    {
      printf("Error, try again\n");
      rewind(stdin);
    }
  }
  if (userchoice == 1)
  {
    for (int i = 0; i < choice; i++)
    {
      printf("input %d element in array\n", i + 1);
      while (scanf("%d", &array[i]) != 1)
      {
        printf("Error, try again\n");
        rewind(stdin);
      }
    }
    int min = array[1];
    for (int i = 0; i < choice; i++)
    {
      if (array[i] < min)
      {
        min = array[i];
      }
    }
    printf("%d\n", min);
  }
  if (userchoice == 0)
  {
    for (int i = 0; i < choice; i++)
    {
      arrayrand[i] =  rand()%11-10;
      printf("\t%d", arrayrand[i]);
    }
    printf("\n");
    int minrand = arrayrand[1];
    for (int i = 0; i < choice; i++)
    {
      if (arrayrand[i] < minrand)
      {
        minrand = arrayrand[i];
      }
    }
    printf("%d", minrand);
  }
  return 0;
}
